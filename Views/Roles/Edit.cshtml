@model TaskManagementMvc.Models.ViewModels.EditRoleViewModel

@{
    var permissions = ViewData["Permissions"] as List<TaskManagementMvc.Models.ViewModels.PermissionGroupViewModel> ?? new();
}

<div class="container">
    <h2>ویرایش نقش</h2>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="IsActive" />
            <label class="form-check-label" asp-for="IsActive"></label>
        </div>

        <h5 class="mt-3">دسترسی‌ها</h5>
        @foreach (var group in permissions)
        {
            <div class="mb-2">
                <strong>@group.Group</strong>
                <div class="row">
                    @foreach (var p in group.Permissions)
                    {
                        var isChecked = Model.SelectedPermissions.Contains(p.Id.ToString());
                        <div class="col-md-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedPermissions" value="@p.Id" id="perm_@p.Id" @(isChecked ? "checked" : "") />
                                <label class="form-check-label" for="perm_@p.Id">@p.Name (@p.Code)</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <button type="submit" class="btn btn-primary">ذخیره</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>


