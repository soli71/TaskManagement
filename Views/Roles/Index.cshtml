@model IEnumerable<TaskManagementMvc.Models.ViewModels.RoleListViewModel>

@{
    var systemRoles = new[] { "SystemAdmin", "SystemManager", "CompanyManager" };
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">نقش‌ها</h2>
        <corp-btn asp-action="Create" icon="bi-plus-lg" dense>ایجاد نقش</corp-btn>
    </div>
    <corp-table headers="نام,توضیحات,وضعیت,کاربران,دسترسی‌ها,عملیات" striped hover dense responsive caption="لیست نقش‌ها">
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Name</td>
                <td>@r.Description</td>
                <td>
                    @if (r.IsActive)
                    {
                        <corp-badge variant="success" dense pill icon="bi-check2">فعال</corp-badge>
                    }
                    else
                    {
                        <corp-badge variant="secondary" dense pill icon="bi-x">غیرفعال</corp-badge>
                    }
                </td>
                <td>@r.UserCount</td>
                <td>@r.PermissionCount</td>
                <td class="d-flex flex-wrap gap-1">
                    <corp-btn asp-action="Details" asp-route-id="@r.Id" variant="secondary" icon="bi-eye" dense>جزئیات</corp-btn>
                    <corp-btn asp-action="Edit" asp-route-id="@r.Id" variant="outline" icon="bi-pencil" dense>ویرایش</corp-btn>
                    @if (!systemRoles.Contains(r.Name))
                    {
                        <form asp-action="Delete" asp-route-id="@r.Id" method="post" class="d-inline" onsubmit="return confirm('آیا مطمئن هستید؟');">
                            <corp-btn variant="danger" icon="bi-trash" dense type="submit">حذف</corp-btn>
                        </form>
                    }
                </td>
            </tr>
        }
    </corp-table>
</div>


