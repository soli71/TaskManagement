@model TaskManagementMvc.Models.ViewModels.TaskFormViewModel

<div class="modal fade" id="createTaskModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">ایجاد تسک جدید</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form asp-controller="Tasks" asp-action="Create" method="post">
          @Html.AntiForgeryToken()
          <input type="hidden" asp-for="ProjectId" />
          <div class="row g-3">
            <div class="col-md-6">
              <label asp-for="Title" class="form-label"></label>
              <input asp-for="Title" class="form-control" required />
            </div>
            <div class="col-md-6">
              <label asp-for="Priority" class="form-label"></label>
              <select asp-for="Priority" class="form-select" asp-items="Html.GetEnumSelectList<TaskManagementMvc.Models.TaskPriority>()"></select>
            </div>
            <div class="col-12">
              <label asp-for="Description" class="form-label"></label>
              <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
            <div class="col-md-6">
              <label asp-for="Status" class="form-label"></label>
              <select asp-for="Status" class="form-select" asp-items="Html.GetEnumSelectList<TaskManagementMvc.Models.TaskStatus>()"></select>
            </div>
            <div class="col-md-6">
              <label class="form-label">انجام‌دهنده</label>
              <select asp-for="PerformerId" asp-items="Model.Performers" class="form-select">
                <option value="">-- انتخاب --</option>
              </select>
            </div>
            <div class="col-md-4">
              <label asp-for="StartAt" class="form-label"></label>
              <input asp-for="StartAt" class="form-control" type="date" />
            </div>
            <div class="col-md-4">
              <label asp-for="EndAt" class="form-label"></label>
              <input asp-for="EndAt" class="form-control" type="date" />
            </div>
            <div class="col-md-4">
              <label asp-for="Hours" class="form-label"></label>
              <input asp-for="Hours" class="form-control" type="number" step="0.25" min="0" />
            </div>
            <div class="col-md-6">
              <label asp-for="OriginalEstimateHours" class="form-label"></label>
              <input asp-for="OriginalEstimateHours" class="form-control" type="number" step="0.25" min="0" />
            </div>
            @if (User.IsInRole("SystemAdmin"))
            {
              <div class="col-md-6">
                <label class="form-label">شرکت</label>
                <select asp-for="CompanyId" asp-items="Model.Companies" class="form-select">
                  <option value="">-- انتخاب شرکت --</option>
                </select>
              </div>
            }
            @* انتخاب پروژه در مودال برداشته شد؛ به‌صورت خودکار پر می‌شود *@
          </div>
          <div class="mt-3">
            <label class="form-label">ضمائم</label>
            <input type="file" name="files" class="form-control" multiple />
            <small class="text-muted">می‌توانید پس از ایجاد نیز فایل اضافه کنید.</small>
          </div>
          <div class="mt-3">
            <label class="form-label">کامنت</label>
            <textarea name="initialComment" class="form-control" rows="2" placeholder="یادداشت/کامنت اولیه"></textarea>
          </div>
          <div class="mt-4 text-end">
            <button type="submit" class="btn btn-primary">
              <i class="bi bi-check-lg me-1"></i>ثبت
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


