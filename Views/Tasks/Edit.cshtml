@model TaskFormViewModel

<form id="editTaskForm" asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex align-items-center mb-3">
        <i class="bi bi-pencil-square text-warning fs-4 ms-2"></i>
        <h5 class="mb-0 fw-semibold">ویرایش تسک</h5>
    </div>

    @await Html.PartialAsync("_TaskFormFields", Model)

    <div class="row g-4 mt-1">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-light fw-semibold d-flex align-items-center gap-2">
                    <i class="bi bi-files"></i>
                    ضمائم
                </div>
                <div class="card-body">
                    @if (Model.Attachments?.Any() == true)
                    {
                        <div class="list-group mb-3">
                            @foreach (var attachment in Model.Attachments)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-file-earmark text-muted fs-5 ms-2"></i>
                                        <div>
                                            <span class="fw-medium">@attachment.FileName</span>
                                            <small class="text-muted d-block">@((attachment.FileSize / 1024.0).ToString("F1")) KB</small>
                                        </div>
                                    </div>
                                    <div class="btn-group">
                                        <a asp-action="DownloadAttachment" asp-controller="Tasks" asp-route-id="@attachment.Id" class="btn btn-sm btn-outline-primary">
                                            دانلود
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted small">فایلی ثبت نشده است.</div>
                    }
                    <div class="input-group">
                        <input type="file" name="newFile" class="form-control" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png,.txt,.zip" />
                        <button class="btn btn-outline-secondary" type="submit" formaction="@Url.Action("UploadAttachment","Tasks", new { id = Model.Id })">
                            آپلود
                        </button>
                    </div>
                    <div class="form-text mt-2">برای افزودن فایل جدید، انتخاب و سپس آپلود کنید.</div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mt-4">
                <div class="card-header bg-light fw-semibold d-flex align-items-center gap-2">
                    <i class="bi bi-chat-left-text"></i>
                    کامنت جدید
                </div>
                <div class="card-body">
                    <textarea name="comment" class="form-control" rows="3" placeholder="افزودن کامنت یا یادداشت..."></textarea>
                </div>
            </div>

            @if (Model.HistoryEntries?.Any() == true)
            {
                <div class="card shadow-sm border-0 mt-4">
                    <div class="card-header bg-light fw-semibold d-flex align-items-center gap-2">
                        <i class="bi bi-clock-history"></i>
                        تاریخچه تغییرات
                    </div>
                    <div class="card-body" style="max-height:320px; overflow-y:auto;">
                        <ul class="list-unstyled mb-0 small">
                            @foreach (var history in Model.HistoryEntries.OrderByDescending(x => x.ChangedAt))
                            {
                                <li class="mb-3 pb-2 border-bottom">
                                    <div class="d-flex justify-content-between">
                                        <strong class="text-primary">@history.Field</strong>
                                        <span class="text-muted">@history.ChangedAt.ToLocalTime().ToString("yyyy/MM/dd HH:mm")</span>
                                    </div>
                                    <div class="mt-1">
                                        @if (!string.IsNullOrEmpty(history.OldValue))
                                        {
                                            <span class="text-decoration-line-through text-muted">@history.OldValue</span>
                                            <i class="bi bi-arrow-right mx-1"></i>
                                        }
                                        <span class="text-success">@history.NewValue</span>
                                    </div>
                                    <div class="mt-1 text-muted">@history.ChangedBy</div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100 mt-4 mt-lg-0">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h6 class="fw-semibold mb-2">راهنما</h6>
                        <ul class="small text-muted ps-3 mb-0">
                            <li>برای ثبت تغییرات روی ذخیره کلیک کنید.</li>
                            <li>در تاریخچه می‌توانید تغییرات مهم را ببینید.</li>
                            <li>ثبت ساعت‌ها باعث محاسبه پیشرفت می‌شود.</li>
                        </ul>
                    </div>
                    <div class="mt-4 pt-3 border-top d-flex gap-2 justify-content-end">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">انصراف</button>
                        <button type="submit" class="btn btn-warning">ذخیره تغییرات</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
