@model TaskManagementMvc.Models.TaskItem
@using TaskManagementMvc.Models

<form id="task-quick-form" asp-action="QuickSave" asp-controller="Tasks" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">عنوان</label>
        <input class="form-control" name="Title" value="@Model.Title" />
    </div>
    <div class="mb-3">
        <label class="form-label">توضیحات</label>
        <textarea class="form-control" rows="4" name="Description">@Model.Description</textarea>
    </div>
    <div class="row g-2">
        <div class="col-md-4">
            <label class="form-label">وضعیت</label>
            <select class="form-select" name="Status">
                @foreach (TaskManagementMvc.Models.TaskStatus s in Enum.GetValues(typeof(TaskManagementMvc.Models.TaskStatus)))
                {
                    <option value="@s" selected="@(s == Model.Status)">@s</option>
                }
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">انجام‌دهنده</label>
            <select class="form-select" name="PerformerId" asp-items="ViewBag.Performers"></select>
        </div>
        <div class="col-md-4">
            <label class="form-label">ساعت</label>
            <input type="number" step="0.25" class="form-control" name="Hours" value="@Model.Hours" />
        </div>
    </div>
    <div class="row g-2 mt-2">
        <div class="col-md-4">
            <label class="form-label">تخمین اولیه (ساعت)</label>
            <input type="number" step="0.25" class="form-control" name="OriginalEstimateHours" value="@Model.OriginalEstimateHours" />
        </div>
        <div class="col-md-4">
            <label class="form-label">شروع</label>
            <input type="datetime-local" class="form-control" name="StartAt" value="@(Model.StartAt?.ToString("yyyy-MM-ddTHH:mm"))" />
        </div>
        <div class="col-md-4">
            <label class="form-label">پایان</label>
            <input type="datetime-local" class="form-control" name="EndAt" value="@(Model.EndAt?.ToString("yyyy-MM-ddTHH:mm"))" />
        </div>
    </div>
    <div class="mt-3 d-flex justify-content-end">
        <button type="submit" class="btn btn-primary">
            ذخیره تغییرات
        </button>
    </div>
</form>


