@model TaskManagementMvc.Models.Performer
@{ ViewData["Title"] = "ویرایش انجام‌دهنده"; }
<h2>ویرایش انجام‌دهنده</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">گرید</label>
        <select asp-for="GradeId" asp-items="ViewBag.Grades" class="form-select"></select>
    </div>
