@model TaskManagementMvc.Models.Performer
@{ ViewData["Title"] = "افزودن انجام‌دهنده"; }
<h2>افزودن انجام‌دهنده</h2>
<form asp-action="Create">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">گرید</label>
        <select asp-for="GradeId" asp-items="ViewBag.Grades" class="form-select"></select>
    </div>
    <button type="submit" class="btn btn-success">ثبت</button>
</form>
