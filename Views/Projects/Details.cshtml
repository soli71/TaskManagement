@model TaskManagementMvc.Models.Project

<div class="container">
    <h2>جزئیات پروژه: @Model.Name</h2>
    <p>
        <a asp-action="Board" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
            مشاهده بورد تسک‌ها
        </a>
    </p>
    <dl class="row">
        <dt class="col-sm-2">شرکت</dt>
        <dd class="col-sm-10">@Model.Company?.Name</dd>
        <dt class="col-sm-2">کد</dt>
        <dd class="col-sm-10">@Model.Code</dd>
        <dt class="col-sm-2">مدیر پروژه</dt>
        <dd class="col-sm-10">@Model.ProjectManager?.FullName</dd>
        <dt class="col-sm-2">وضعیت</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <h4 class="mt-3">تسک‌ها</h4>
    <ul>
        @foreach (var t in Model.Tasks)
        {
            <li>@t.Title (@t.Status)</li>
        }
    </ul>

    <h4 class="mt-3">فاکتورها</h4>
    <ul>
        @foreach (var inv in Model.Invoices)
        {
            <li><a asp-controller="Invoices" asp-action="Details" asp-route-id="@inv.Id">@inv.InvoiceNumber</a></li>
        }
    </ul>

    <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
</div>


