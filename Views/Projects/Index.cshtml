@model IEnumerable<TaskManagementMvc.Models.Project>

<div class="container">
    <h2>پروژه‌ها</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">ایجاد پروژه</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>نام</th>
                <th>شرکت</th>
                <th>مدیر پروژه</th>
                <th>وضعیت</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.Company?.Name</td>
                    <td>@p.ProjectManager?.FullName</td>
                    <td>@p.Status</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-secondary">جزئیات</a>
                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">ویرایش</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


