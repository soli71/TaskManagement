@model IEnumerable<TaskManagementMvc.Models.TaskItem>

@{
    var project = ViewData["Project"] as TaskManagementMvc.Models.Project;
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="mb-0">بورد تسک‌ها — @project?.Name</h2>
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@project?.Id" class="btn btn-secondary btn-sm">بازگشت به پروژه</a>
    </div>

    <div class="row g-3">
        <div class="col-lg-3">
            <div class="card h-100">
                <div class="card-header bg-light fw-bold">در حال انجام</div>
                <div class="card-body">
                    @foreach (var t in Model.Where(t => t.Status == TaskManagementMvc.Models.TaskStatus.InProgress))
                    {
                        <div class="border rounded p-2 mb-2">
                            <div class="fw-semibold">@t.Title</div>
                            <div class="text-muted small">@t.Performer?.Name</div>
                            <div class="small">@t.Hours ساعت</div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card h-100">
                <div class="card-header bg-light fw-bold">تکمیل شده</div>
                <div class="card-body">
                    @foreach (var t in Model.Where(t => t.Status == TaskManagementMvc.Models.TaskStatus.Completed))
                    {
                        <div class="border rounded p-2 mb-2">
                            <div class="fw-semibold">@t.Title</div>
                            <div class="text-muted small">@t.Performer?.Name</div>
                            <div class="small">@t.Hours ساعت</div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card h-100">
                <div class="card-header bg-light fw-bold">صورتحساب شده</div>
                <div class="card-body">
                    @foreach (var t in Model.Where(t => t.Status == TaskManagementMvc.Models.TaskStatus.Invoiced))
                    {
                        <div class="border rounded p-2 mb-2">
                            <div class="fw-semibold">@t.Title</div>
                            <div class="text-muted small">@t.Performer?.Name</div>
                            <div class="small">@t.Hours ساعت</div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="card h-100">
                <div class="card-header bg-light fw-bold">پرداخت شده</div>
                <div class="card-body">
                    @foreach (var t in Model.Where(t => t.Status == TaskManagementMvc.Models.TaskStatus.Paid))
                    {
                        <div class="border rounded p-2 mb-2">
                            <div class="fw-semibold">@t.Title</div>
                            <div class="text-muted small">@t.Performer?.Name</div>
                            <div class="small">@t.Hours ساعت</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


