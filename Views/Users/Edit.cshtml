@model TaskManagementMvc.Models.ViewModels.EditUserViewModel

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">ویرایش کاربر</h2>
        <corp-btn asp-action="Index" variant="outline" icon="bi-arrow-right" dense>بازگشت</corp-btn>
    </div>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md-4"><corp-input asp-for="FullName" icon="bi-person" required dense></corp-input></div>
            <div class="col-md-4"><corp-input asp-for="UserName" icon="bi-person-badge" required dense></corp-input></div>
            <div class="col-md-4"><corp-input asp-for="Email" icon="bi-envelope" required dense></corp-input></div>
        </div>
        <div class="row">
            <div class="col-md-4"><corp-input asp-for="PhoneNumber" icon="bi-telephone" dense></corp-input></div>
            <div class="col-md-4"><corp-input asp-for="IbanNumber" icon="bi-bank" dense placeholder="IR..."></corp-input></div>
            <div class="col-md-4"><corp-input asp-for="CardNumber" icon="bi-credit-card" dense placeholder="1234-1234-1234-1234"></corp-input></div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <corp-select asp-for="CompanyId" placeholder="انتخاب شرکت" icon="bi-building" dense>
                    <option value="">-- انتخاب شرکت --</option>
                    @foreach (var c in Model.Companies)
                    {
                        if (Model.CompanyId == c.Id)
                        {
                            <option value="@c.Id" selected>@c.Name</option>
                        }
                        else
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    }
                </corp-select>
            </div>
            <div class="col-md-4">
                <corp-select asp-for="GradeId" placeholder="انتخاب رتبه" icon="bi-bar-chart" dense>
                    <option value="">-- انتخاب رتبه --</option>
                    @foreach (var g in Model.Grades)
                    {
                        if (Model.GradeId == g.Id)
                        {
                            <option value="@g.Id" selected>@g.Name</option>
                        }
                        else
                        {
                            <option value="@g.Id">@g.Name</option>
                        }
                    }
                </corp-select>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">فعال</label>
                        <!-- Add a hidden field to ensure false is sent when unchecked -->
                        <input type="hidden" name="IsActive" value="false" />
                    </div>
                </div>
            </div>
        </div>

        <h5 class="mt-4 mb-2">نقش‌ها</h5>
        @{
            var currentUserId = int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "0");
            var isEditingSelf = Model.Id == currentUserId;
            var currentUserRole = "";
            if (User.IsInRole(TaskManagementMvc.Models.Roles.SystemAdmin)) currentUserRole = TaskManagementMvc.Models.Roles.SystemAdmin;
            else if (User.IsInRole(TaskManagementMvc.Models.Roles.CompanyManager)) currentUserRole = TaskManagementMvc.Models.Roles.CompanyManager;
            else if (User.IsInRole(TaskManagementMvc.Models.Roles.ProjectManager)) currentUserRole = TaskManagementMvc.Models.Roles.ProjectManager;
            else if (User.IsInRole(TaskManagementMvc.Models.Roles.Employee)) currentUserRole = TaskManagementMvc.Models.Roles.Employee;
            var isNotSystemAdmin = currentUserRole != TaskManagementMvc.Models.Roles.SystemAdmin;
        }
        @if (isEditingSelf && isNotSystemAdmin)
        {
            <div class="alert alert-warning small">
                <i class="bi bi-exclamation-triangle"></i>
                شما نمی‌توانید نقش‌های خود را تغییر دهید.
            </div>
            <div class="row g-2">
                @foreach (var r in Model.Roles)
                {
                    var isChecked = Model.SelectedRoles.Contains(r.Name);
                    if (isChecked)
                    {
                        <div class="col-md-3">
                            <div class="form-check corp-check corp-check-dense">
                                <input class="form-check-input" type="checkbox" disabled checked />
                                <input type="hidden" name="SelectedRoles" value="@r.Name" />
                                <label class="form-check-label">@TaskManagementMvc.Models.Roles.GetDisplayName(r.Name!) <small>(سطح @TaskManagementMvc.Models.Roles.GetRoleLevel(r.Name!))</small></label>
                            </div>
                        </div>
                    }
                }
            </div>
        }
        else
        {
            <div class="row g-2">
                @foreach (var r in Model.Roles)
                {
                    var isChecked = Model.SelectedRoles.Contains(r.Name);
                    <div class="col-md-3">
                        <div class="form-check corp-check corp-check-dense">
                            <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@r.Name" id="role_@r.Id" @(isChecked ? "checked" : "") />
                            <label class="form-check-label" for="role_@r.Id">@TaskManagementMvc.Models.Roles.GetDisplayName(r.Name!) <small>(سطح @TaskManagementMvc.Models.Roles.GetRoleLevel(r.Name!))</small></label>
                        </div>
                    </div>
                }
            </div>
            @if (isNotSystemAdmin && !isEditingSelf)
            {
                <div class="alert alert-info mt-2 small">
                    توجه: شما به عنوان @TaskManagementMvc.Models.Roles.GetDisplayName(currentUserRole) (سطح @TaskManagementMvc.Models.Roles.GetRoleLevel(currentUserRole)) تنها می‌توانید نقش‌هایی با سطح پایین‌تر از خود تخصیص دهید.
                </div>
            }
        }

        <div class="d-flex gap-2 mt-4">
            <corp-btn variant="success" icon="bi-save" dense>ذخیره</corp-btn>
            <corp-btn asp-action="Index" variant="outline" icon="bi-x" dense>بازگشت</corp-btn>
        </div>
    </form>
</div>


