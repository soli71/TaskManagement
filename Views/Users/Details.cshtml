@model TaskManagementMvc.Models.ApplicationUser

@{
    var roles = ViewData["UserRoles"] as IList<string> ?? new List<string>();
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">جزئیات کاربر</h2>
        <corp-btn asp-action="Index" variant="outline" icon="bi-arrow-right" dense>بازگشت</corp-btn>
    </div>
    <div class="row mb-3">
        <div class="col-md-6">
            <corp-input asp-for="FullName" icon="bi-person" readonly dense></corp-input>
        </div>
        <div class="col-md-3">
            <corp-input asp-for="UserName" icon="bi-person-badge" readonly dense></corp-input>
        </div>
        <div class="col-md-3">
            <corp-input asp-for="Email" icon="bi-envelope" readonly dense></corp-input>
        </div>
    </div>
    <div class="mb-3">
        <label class="form-label corp-label">نقش‌ها</label>
        <div class="d-flex flex-wrap gap-1">
            @foreach (var r in roles)
            {
                <corp-badge variant="info" dense>@r</corp-badge>
            }
        </div>
    </div>
</div>


