@model TaskManagementMvc.Models.Company

<div class="container">
    <h2>جزئیات شرکت: @Model.Name</h2>

    <dl class="row">
        <dt class="col-sm-2">ایمیل</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">آدرس</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">توضیحات</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">ویرایش</a>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </p>

    <h4 class="mt-4">پروژه‌ها</h4>
    <ul>
        @foreach (var p in Model.Projects)
        {
            <li><a asp-controller="Projects" asp-action="Details" asp-route-id="@p.Id">@p.Name</a></li>
        }
    </ul>
</div>


