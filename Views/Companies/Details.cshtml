@model TaskManagementMvc.Models.Company

<div class="container">
    <h2>جزئیات شرکت: @Model.Name</h2>

    <dl class="row">
        <dt class="col-sm-2">ایمیل</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">آدرس</dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">توضیحات</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <p class="d-flex gap-2">
        <corp-btn variant="outline" icon="bi-arrow-right" asp-action="Index">بازگشت</corp-btn>
        <corp-btn variant="primary" icon="bi-pencil" asp-action="Edit" asp-route-id="@Model.Id">ویرایش</corp-btn>
        @if (Model.IsActive)
        {<corp-badge variant="success" dense icon="bi-check2">فعال</corp-badge>}
        else
        {<corp-badge variant="danger" dense icon="bi-x">غیرفعال</corp-badge>}
    </p>

    <h4 class="mt-4">پروژه‌ها</h4>
    <ul>
        @foreach (var p in Model.Projects)
        {
            <li><a asp-controller="Projects" asp-action="Edit" asp-route-id="@p.Id">@p.Name</a></li>
        }
    </ul>
</div>


