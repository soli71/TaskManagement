@model TaskManagementMvc.Models.Company

<div class="container">
    <h2>تغییر وضعیت شرکت</h2>
    <p>آیا از تغییر وضعیت شرکت <strong>@Model.Name</strong> مطمئن هستید؟</p>
    <form asp-action="ToggleActive" method="post" class="d-flex gap-2">
        <input type="hidden" name="id" value="@Model.Id" />
        <corp-btn variant="warning" icon="bi-shuffle" type="submit">تغییر وضعیت</corp-btn>
        <corp-btn variant="outline" icon="bi-x" asp-action="Index">انصراف</corp-btn>
        @if (Model.IsActive)
        {<corp-badge variant="success" dense icon="bi-check2">اکنون فعال</corp-badge>}
        else
        {<corp-badge variant="danger" dense icon="bi-x">اکنون غیرفعال</corp-badge>}
    </form>
</div>


