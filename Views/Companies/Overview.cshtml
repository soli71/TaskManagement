@model TaskManagementMvc.Models.ViewModels.CompanyOverviewViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

<div class="container">
    <h2>نمای کلی شرکت‌ها (ادمین)</h2>

    <form asp-action="Overview" method="get" class="row g-2 align-items-end">
        <div class="col-md-6">
            <label class="form-label">انتخاب شرکت</label>
            <select name="companyId" class="form-select" asp-items="@(new SelectList(Model.Companies, "Id", "Name", Model.SelectedCompanyId))">
                <option value="">— انتخاب کنید —</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">نمایش</button>
        </div>
    </form>

    @if (Model.SelectedCompanyId.HasValue)
    {
        <hr />
        <h4 class="mt-3">پروژه‌ها</h4>
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>نام</th>
                    <th>مدیر پروژه</th>
                    <th>وضعیت</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Projects)
                {
                    <tr>
                        <td>@p.Name</td>
                        <td>@p.ProjectManager?.FullName</td>
                        <td>@p.Status</td>
                        <td><a asp-controller="Projects" asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-secondary">جزئیات</a></td>
                    </tr>
                }
            </tbody>
        </table>

        <h4 class="mt-4">تسک‌ها</h4>
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>عنوان</th>
                    <th>پروژه</th>
                    <th>انجام‌دهنده</th>
                    <th>وضعیت</th>
                    <th>ساعت</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.Tasks)
                {
                    <tr>
                        <td>@t.Title</td>
                        <td>@t.Project?.Name</td>
                        <td>@t.Performer?.Name</td>
                        <td>@t.Status</td>
                        <td>@t.Hours</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>


