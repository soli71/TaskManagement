@model TaskManagementMvc.Models.Company

<div class="container">
    <h2>پروژه‌های شرکت: @Model.Name</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>نام</th>
                <th>مدیر پروژه</th>
                <th>وضعیت</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Projects)
            {
                <tr>
                    <td>@p.Name</td>
                    <td>@p.ProjectManager?.FullName</td>
                    <td>@p.Status</td>
                    <td><a asp-controller="Projects" asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-secondary">جزئیات</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


