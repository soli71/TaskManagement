@model TaskManagementMvc.Models.Company

<div class="container">
    <h2 class="mb-4 fw-bold">ایجاد شرکت</h2>
    <form asp-action="Create" method="post" class="corp-form corp-three-cols" novalidate>
        <corp-input dense asp-for="Name" icon="bi-building" placeholder="نام شرکت"></corp-input>
        <corp-input dense asp-for="Email" type="email" icon="bi-envelope" placeholder="ایمیل سازمانی"></corp-input>
        <corp-input dense asp-for="Address" icon="bi-geo-alt" placeholder="آدرس"></corp-input>
        <corp-input dense asp-for="Website" icon="bi-globe" placeholder="وب‌سایت (اختیاری)"></corp-input>
        <div class="d-flex gap-2 mt-3">
            <corp-btn dense variant="primary" icon="bi-check2" type="submit">ثبت</corp-btn>
            <corp-btn dense variant="outline" icon="bi-x" asp-action="Index">انصراف</corp-btn>
        </div>
    </form>
</div>


