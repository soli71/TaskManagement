@{
    var currentController = ViewContext.RouteData.Values["Controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}

<div class="sidebar" id="sidebar">
    <div class="sidebar-header">
        <div class="d-flex align-items-center gap-2">
            <div class="brand-icon-sm">
                <i class="bi bi-list"></i>
            </div>
            <span class="sidebar-title">منو</span>
        </div>
        <button class="btn btn-sm btn-outline-secondary sidebar-toggle" id="sidebarToggle" type="button">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
    
    <div class="sidebar-body">
        @* Optional page-provided items *@
        @if (ViewData["SidebarItems"] is IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem> slItems && slItems.Any())
        {
            <div class="sidebar-section">
                <h6 class="sidebar-section-title">
                    <i class="bi bi-list-ul me-2"></i>@(ViewData["SidebarTitle"]?.ToString() ?? "آیتم‌ها")
                </h6>
                <ul class="sidebar-nav">
                    @foreach (var it in slItems)
                    {
                        <li class="sidebar-nav-item">
                            @if (!string.IsNullOrEmpty(it.Value))
                            {
                                <a class="sidebar-nav-link" href="@it.Value">
                                    <i class="bi bi-dot me-1"></i>
                                    <span>@it.Text</span>
                                </a>
                            }
                            else
                            {
                                <div class="sidebar-nav-link">
                                    <i class="bi bi-dot me-1"></i>
                                    <span>@it.Text</span>
                                </div>
                            }
                        </li>
                    }
                </ul>
            </div>
        }
        else if (ViewData["SidebarItems"] is IEnumerable<string> sItems && sItems.Any())
        {
            <div class="sidebar-section">
                <h6 class="sidebar-section-title">
                    <i class="bi bi-list-ul me-2"></i>@(ViewData["SidebarTitle"]?.ToString() ?? "آیتم‌ها")
                </h6>
                <ul class="sidebar-nav">
                    @foreach (var t in sItems)
                    {
                        <li class="sidebar-nav-item">
                            <div class="sidebar-nav-link">
                                <i class="bi bi-dot me-1"></i>
                                <span>@t</span>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        }

        @* Home Section - Always visible *@
        <div class="sidebar-section">
            <h6 class="sidebar-section-title">
                <i class="bi bi-house me-2"></i>صفحه اصلی
            </h6>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-2"></i>
                        <span>داشبورد</span>
                    </a>
                </li>
            </ul>
        </div>

        @* Company Section - Only show if admin *@
        @if (User.IsInRole("SystemAdmin"))
        {
            <div class="sidebar-section">
                <h6 class="sidebar-section-title">
                    <i class="bi bi-building me-2"></i>شرکت
                </h6>
                <ul class="sidebar-nav">
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link @(currentController == "Companies" && currentAction == "Index" ? "active" : "")" asp-controller="Companies" asp-action="Index">
                            <i class="bi bi-building me-2"></i>
                            <span>مدیریت شرکت‌ها</span>
                        </a>
                    </li>
                </ul>
            </div>
        }

        @* Projects Section - Always visible *@
        <div class="sidebar-section">
            <h6 class="sidebar-section-title">
                <i class="bi bi-folder me-2"></i>پروژه‌ها
            </h6>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link @(currentController == "Projects" && currentAction == "Index" ? "active" : "")" asp-controller="Projects" asp-action="Index">
                        <i class="bi bi-folder2-open me-2"></i>
                        <span>لیست پروژه‌ها</span>
                    </a>
                </li>
            
            </ul>
        </div>

        @* Tasks Section - Always visible *@
        <div class="sidebar-section">
            <h6 class="sidebar-section-title">
                <i class="bi bi-list-task me-2"></i>تسک‌ها
            </h6>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link @(currentController == "Tasks" && currentAction == "Archived" ? "active" : "")" asp-controller="Tasks" asp-action="Archived">
                        <i class="bi bi-archive me-2"></i>
                        <span>تسک‌های آرشیو شده</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link @(currentController == "Tasks" && currentAction == "CompletedUninvoiced" ? "active" : "")" asp-controller="Tasks" asp-action="CompletedUninvoiced">
                        <i class="bi bi-check-circle me-2"></i>
                        <span>تکمیل شده بدون فاکتور</span>
                    </a>
                </li>
            </ul>
        </div>

        @* Financial Section - Always visible *@
        <div class="sidebar-section">
            <h6 class="sidebar-section-title">
                <i class="bi bi-receipt me-2"></i>مالی
            </h6>
            <ul class="sidebar-nav">
                <a class="sidebar-nav-link @(currentController == "Invoices" && currentAction == "Index" ? "active" : "")" asp-controller="Invoices" asp-action="Index">
                    <i class="bi bi-receipt me-2"></i>
                    <span>صورتحساب‌ها</span>
                </a>
            </ul>
        </div>

        @* Team Section - Always visible *@
        <div class="sidebar-section">
            <h6 class="sidebar-section-title">
                <i class="bi bi-people me-2"></i>تیم
            </h6>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link @(currentController == "Grades" && currentAction == "Index" ? "active" : "")" asp-controller="Grades" asp-action="Index">
                        <i class="bi bi-grid-3x3-gap me-2"></i>
                        <span>گریدها</span>
                    </a>
                </li>
            </ul>
        </div>

        @* Admin Management Section - Only show if admin *@
        @if (User.IsInRole("SystemAdmin"))
        {
            <div class="sidebar-section">
                <h6 class="sidebar-section-title">
                    <i class="bi bi-shield-lock me-2"></i>مدیریت
                </h6>
                <ul class="sidebar-nav">
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link @(currentController == "Users" && currentAction == "Index" ? "active" : "")" asp-controller="Users" asp-action="Index">
                            <i class="bi bi-people me-2"></i>
                            <span>کاربران</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link @(currentController == "Roles" && currentAction == "Index" ? "active" : "")" asp-controller="Roles" asp-action="Index">
                            <i class="bi bi-person-badge me-2"></i>
                            <span>نقش‌ها</span>
                        </a>
                    </li>
                    <li class="sidebar-nav-item">
                        <a class="sidebar-nav-link @(currentController == "Permissions" && currentAction == "Index" ? "active" : "")" asp-controller="Permissions" asp-action="Index">
                            <i class="bi bi-key me-2"></i>
                            <span>دسترسی‌ها</span>
                        </a>
                    </li>
                </ul>
            </div>
        }

        @* Settings Section - Always visible *@
        <div class="sidebar-section">
            <h6 class="sidebar-section-title">
                <i class="bi bi-gear me-2"></i>تنظیمات
            </h6>
            <ul class="sidebar-nav">
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link @(currentController == "EmailTemplates" && currentAction == "Index" ? "active" : "")" asp-controller="EmailTemplates" asp-action="Index">
                        <i class="bi bi-envelope me-2"></i>
                        <span>قالب‌های ایمیل</span>
                    </a>
                </li>
                <li class="sidebar-nav-item">
                    <a class="sidebar-nav-link @(currentController == "Account" && currentAction == "Profile" ? "active" : "")" asp-controller="Account" asp-action="Profile">
                        <i class="bi bi-person me-2"></i>
                        <span>پروفایل</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="sidebar-footer">
        <div class="sidebar-user-info">
            <div class="user-avatar-sm">
                <i class="bi bi-person-circle"></i>
            </div>
            <div class="user-details">
                <div class="user-name">@User.Identity?.Name</div>
                <div class="user-role">کاربر</div>
            </div>
        </div>

        <form asp-controller="Account" asp-action="Logout" method="post" class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-danger w-100">
                <i class="bi bi-box-arrow-right me-2"></i>خروج
            </button>
        </form>
    </div>
</div>

<div class="sidebar-overlay" id="sidebarOverlay"></div>

<button class="btn btn-primary sidebar-toggle-mobile" id="sidebarToggleMobile" type="button">
    <i class="bi bi-list"></i>
</button>


